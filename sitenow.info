name        = {{Name}}
description = {{Description}}
screenshot  = screenshot.png
core        = 7.x

; Base - Radix
base theme  = radix

; Regions
regions[content] = Content
regions[main_nav] = Main Navigation
regions[header] = Header
regions[sidebar] = Sidebar
regions[footer] = Footer

; Breakpoints
breakpoints[xs] = (max-width: 767px)
breakpoints[sm] = (min-width: 768px) and (max-width: 991px)
breakpoints[md] = (min-width: 992px) and (max-width: 1199px)
breakpoints[lg] = (min-width: 1200px)

; CSS - General
stylesheets[all][]     = assets/css/{{machine_name}}.style.css

; Javascript
scripts[] = assets/js/{{machine_name}}.script.js

; Settings
; Set this to FALSE for development only.
settings[preprocess_css] = FALSE

